# Test environment configuration
ENVIRONMENT=test

# Enable all auth providers for testing
VITE_AUTH_EMAIL_PASSWORD_ENABLED=true
VITE_AUTH_GOOGLE_ENABLED=true
VITE_AUTH_APPLE_ENABLED=true
VITE_AUTH_MAGIC_LINK_ENABLED=true

# Mock Google credentials for testing
GOOGLE_CLIENT_ID=test_google_client_id
GOOGLE_CLIENT_SECRET=test_google_client_secret

# Mock Apple credentials for testing
APPLE_CLIENT_ID=test_apple_client_id
APPLE_TEAM_ID=test_team_id
APPLE_KEY_ID=test_key_id
APPLE_PRIVATE_KEY_PATH=/mock/path/to/key.p8

# Database URL for tests (will be overridden by in-memory SQLite)
DATABASE_URL=sqlite+aiosqlite:///:memory:

# JWT secrets for testing
SECRET_KEY=test_secret_key_for_jwt_tokens_in_testing_only
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Frontend URL for magic links in tests
FRONTEND_URL=http://localhost:3000